<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".LoginActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@color/blue"
            android:fadeScrollbars="true"
            android:isScrollContainer="true"
            android:keepScreenOn="false"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2">

            <EditText
                android:id="@+id/editTextTextPersonName6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:ems="10"
                android:inputType="text"
                android:shadowColor="@color/white"
                android:text="Local"
                android:textColor="@color/text"
                android:textColorHighlight="@color/text"
                android:textColorHint="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/registerUserActivity"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName5"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="20dp" />

            <EditText
                android:id="@+id/editTextTextPersonName5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="text"
                android:shadowColor="@color/white"
                android:soundEffectsEnabled="false"
                android:text="Empresa"
                android:textColor="@color/text"
                android:textColorHighlight="@color/text"
                android:textColorHint="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/registerUserActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_blue"
                android:text="anunciar"
                android:textColor="@color/text"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp" />

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:shadowColor="@color/white"
                android:text="Nome da vaga"
                android:textColor="@color/text"
                android:textColorHighlight="@color/text"
                android:textColorHint="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:layout_editor_absoluteX="-6dp" />

            <EditText
                android:id="@+id/editTextTextPersonName7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:shadowColor="@color/white"
                android:text="Descrição"
                android:textColor="@color/text"
                android:textColorHighlight="@color/text"
                android:textColorHint="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3"
                tools:layout_editor_absoluteX="20dp" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="date"
                android:shadowColor="@color/white"
                android:text="Aniversário"
                android:textColor="@color/text"
                android:textColorHighlight="@color/text"
                android:textColorHint="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName7"
                tools:layout_editor_absoluteX="16dp" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="number"
                android:shadowColor="@color/white"
                android:text="Salário"
                android:textColor="@color/text"
                android:textColorHighlight="@color/text"
                android:textColorHint="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"
                tools:layout_editor_absoluteX="24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/vacancy_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/no_user_image"
            app:civ_border_color="@color/blue"
            app:civ_border_width="1dp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/galleryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pick_image_background"
            android:src="@drawable/ic_baseline_photo_library"
            app:layout_constraintBottom_toBottomOf="@+id/vacancy_image"
            app:layout_constraintEnd_toEndOf="@+id/vacancy_image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cameraButton"
            app:layout_constraintTop_toTopOf="@+id/vacancy_image"
            app:layout_constraintVertical_bias="0.85" />

        <ImageButton
            android:id="@+id/cameraButton"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:background="@drawable/pick_image_background"
            android:src="@drawable/ic_menu_camera"
            app:layout_constraintBottom_toBottomOf="@+id/vacancy_image"
            app:layout_constraintEnd_toStartOf="@+id/galleryButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="@+id/vacancy_image"
            app:layout_constraintTop_toTopOf="@+id/vacancy_image"
            app:layout_constraintVertical_bias="0.85" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
